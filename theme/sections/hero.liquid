{% liquid
  assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
  assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
%}

<section class="hero page-width page-width-desktop relative">
  {{
    section.settings.image
    | image_url: width: 3840
    | image_tag:
      width: section.settings.image.width,
      height: image_height,
      widths: widths,
      class: 'object-cover max-h-[32rem]'
  }}
  <div class="page-width page-width-desktop scroll-trigger animate--fade-in absolute left-16 top-32 text-white lg:w-1/2">
    {% if section.settings.headline %}
      <h1 class="font-heading uppercase text-white">{{ section.settings.headline }}</h1>
    {% endif %}
    {% if section.settings.copy %}
      <p class="font-copy">{{ section.settings.copy }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Bild auswählen"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Überschrift"
    },
    {
      "type": "text",
      "id": "copy",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
